<h1>Burgers!</h1>

<ul class="float-left">
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burger_name}}

    <button class="change-devoured" data-id="{{id}}">Devour</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form float-left">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ul>